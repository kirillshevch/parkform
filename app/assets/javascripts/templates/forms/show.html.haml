.clearfix(ng-if="ready")
  .text-line
    .head-xs.font-light {{::form.title}}
    .text-norm {{::form.description}}
  .text-line
    %div(ng-repeat="question in form.questions track by question.id")
      %question(question="question" check-form="checkForm")
  .text-line.text-center
    %button.btn.btn-default.btn-block.btn-lg(ng-click="createResponse()" ng-show="formIsFilled")
      .text-semi {{::'js.helpers.submit' | translate}}
